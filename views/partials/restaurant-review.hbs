<div class="form-container">
    <h1>{{this.name}}</h1>
    <h4>City : {{this.cityName}}</h4>
    <h4>Address : {{this.address}}</h4>
    <h4>Overall score : {{this.score}}/10</h4>
    <p style="max-width: 900px;">{{this.review}}</p>
    {{#if this.imageLink}}
        <img class="restaurant-image " src="{{this.imageLink}}" alt="Image of {{this.name}}">
    {{/if}}
</div>