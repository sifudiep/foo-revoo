{{#each restaurantsInPage}}
  {{> restaurant-review}}
{{/each}}

<ul class="pagination">
  {{!-- FIRST ITEM --}}
  <li class="page-item">
    <a href="?page=1">1</a>
  </li>

  <li class="page-item">
    <span>...</span>
  </li>
  {{#if previousPage}}
  {{!-- PREVIOUS --}}
  <li class="page-item">
    <a href="?page={{previousPage}}">{{previousPage}}</a>
  </li>
  {{/if}}
  {{!-- CURRENT --}}
  <li class="page-item active">
    <a>{{page}}</a>
  </li>
  {{#if nextPage}}
  {{!-- NEXT --}}
  <li class="page-item">
    <a href="?page={{nextPage}}">{{nextPage}}</a>
  </li>
  {{/if}}
  <li class="page-item">
    <span>...</span>
  </li>
  {{!-- LAST ITEM --}}
  <li class="page-item">
    <a href="?page={{lastPage}}">{{lastPage}}</a>
  </li>
</ul>